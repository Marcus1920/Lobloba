<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App11"
             x:Class="App11.MainPage" 
             Title="Welcome"
             BackgroundImage="login.png">


    <StackLayout  Margin="30" VerticalOptions="Center"  Spacing="10">

        <Image x:Name="UserIcon" HeightRequest="200" WidthRequest="200" VerticalOptions="Center" HorizontalOptions="Center"/>


        <Button  
            Text="Login"
            FontSize="Large"
             BackgroundColor="Silver"
            BorderColor="White"
            BorderWidth="3"
            x:Name="BtnLogin"
            Clicked="BtnLogin_clicked"
            />

       

        <Button Text="Register" 
                FontSize="Large"
                BackgroundColor="Silver"
                BorderWidth="3"
                BorderColor="White" 
                x:Name="Btnregister"
                Clicked="Btnregister_Clicked"
                 />




    </StackLayout>



</ContentPage>

