<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App11.Views.auth.Forgotpassword"
             BackgroundImage="login.png">
    <ContentPage.Content>

        <StackLayout   Margin="30" VerticalOptions="Center" Spacing="10" >



            <Label x:Name="error"  />
            <Entry  x:Name="Email"
                    Placeholder="Email"
                 />



            <Button x:Name="resetpasswpord"
                     Text="Reset Password"
                     FontSize="Large"
                     BackgroundColor="Silver"
                     BorderWidth="3"
                     BorderColor="White"
                    Clicked="resetpasswpord_Clicked"
                 />


        </StackLayout>

    </ContentPage.Content>
</ContentPage>